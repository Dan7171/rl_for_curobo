{
    "name": "CuRobo Development",
    "image": "curobo_docker:isaac_sim_4.0.0",
    "remoteUser": "root",
    "workspaceFolder": "/host/rl_for_curobo",
    "runArgs": [
        "--gpus", "all",
        "--privileged",
        "--network=host",
        "-e", "ACCEPT_EULA=Y",
        "-e", "PRIVACY_CONSENT=Y",
        "-e", "DISPLAY=:0",
        "-e", "NVIDIA_DRIVER_CAPABILITIES=all",
        "-e", "XAUTHORITY=/root/.Xauthority",
        "-e", "__NV_PRIME_RENDER_OFFLOAD=1",
        "-e", "__GLX_VENDOR_LIBRARY_NAME=nvidia"
    ],
    "mounts": [
        "source=${localEnv:HOME}/.Xauthority,target=/root/.Xauthority,type=bind",
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
        "source=${localEnv:HOME}/docker/isaac-sim/cache/kit,target=/isaac-sim/kit/cache,type=bind,consistency=cached",
        "source=${localEnv:HOME}/docker/isaac-sim/cache/ov,target=/root/.cache/ov,type=bind,consistency=cached",
        "source=${localEnv:HOME}/docker/isaac-sim/cache/pip,target=/root/.cache/pip,type=bind,consistency=cached",
        "source=${localEnv:HOME}/docker/isaac-sim/cache/glcache,target=/root/.cache/nvidia/GLCache,type=bind,consistency=cached",
        "source=${localEnv:HOME}/docker/isaac-sim/cache/computecache,target=/root/.nv/ComputeCache:rw,type=bind,consistency=cached",
        "source=${localEnv:HOME}/docker/isaac-sim/logs,target=/root/.nvidia-omniverse/logs,type=bind,consistency=cached",
        "source=${localEnv:HOME}/docker/isaac-sim/data,target=/root/.local/share/ov/data,type=bind,consistency=cached",
        "source=${localEnv:HOME}/docker/isaac-sim/documents,target=/root/Documents,type=bind,consistency=cached",
        "source=${localEnv:HOME},target=/host,type=bind,consistency=cached",
        "source=/dev,target=/dev,type=bind"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "visualstudioexptteam.vscodeintellicode-python"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/isaac-sim/python.sh",
                "python.pythonPath": "/isaac-sim/python.sh",
                "python.languageServer": "Pylance",
                "python.analysis.extraPaths": [
                    "/isaac-sim/",
                    "/pkgs/curobo",
                    "/isaac-sim/kit/exts/omni.isaac.core/omni/isaac/core",
                    "/isaac-sim/kit/exts/omni.isaac.core_nodes/omni/isaac/core_nodes"
                ],
                "python.analysis.typeCheckingMode": "basic",
                "python.analysis.autoImportCompletions": true,
                "python.analysis.indexing": true,
                "python.analysis.packageIndexDepths": [
                    {
                        "name": "*",
                        "depth": 3
                    }
                ],
                "python.autoComplete.extraPaths": [
                    "/isaac-sim/",
                    "/pkgs/curobo"
                ]
            }
        }
    },
    "postCreateCommand": ". /host/rl_for_curobo/rl_module/docker/guest/startup.sh && chmod +x /isaac-sim/python.sh"
}