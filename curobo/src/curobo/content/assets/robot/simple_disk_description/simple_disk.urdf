<?xml version="1.0" ?>
<robot name="simple_disk" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Virtual world reference -->
  <link name="world">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia ixx="1e-7" ixy="0" ixz="0" iyy="1e-7" iyz="0" izz="1e-7"/>
    </inertial>
  </link>

  <!-- Intermediate link for Y movement -->
  <link name="mobile_base">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia ixx="1e-7" ixy="0" ixz="0" iyy="1e-7" iyz="0" izz="1e-7"/>
    </inertial>
  </link>
  
  <!-- Single movable disk robot link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="red_material">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.015" ixy="0" ixz="0" iyy="0.015" iyz="0" izz="0.0225"/>
    </inertial>
  </link>

  <!-- X-axis movement -->
  <joint name="base_x" type="prismatic">
    <origin rpy="0 0 0.0" xyz="0 0 0.0"/>
    <parent link="world"/>
    <child link="mobile_base"/>
    <axis xyz="1 0 0"/>
    <dynamics damping="1.0"/>
    <limit effort="100" lower="-10.0" upper="10.0" velocity="2.0"/>
  </joint>

  <!-- Y-axis movement -->
  <joint name="base_y" type="prismatic">
    <origin rpy="0 0 0.0" xyz="0 0 0.0"/>
    <parent link="mobile_base"/>
    <child link="base_link"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="1.0"/>
    <limit effort="100" lower="-10.0" upper="10.0" velocity="2.0"/>
  </joint>

  <!-- End-effector link -->
  <link name="ee_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia ixx="1e-7" ixy="0" ixz="0" iyy="1e-7" iyz="0" izz="1e-7"/>
    </inertial>
  </link>

  <!-- Fixed joint to end-effector -->
  <joint name="base_to_ee" type="fixed">
    <origin rpy="0 0 0.0" xyz="0 0 0.0"/>
    <parent link="base_link"/>
    <child link="ee_link"/>
  </joint>

</robot> 