{
  "name": "Isaac Sim 4.5 + CuRobo Dev Container",
  "image": "de257/curobo_isaac45v2:latest",
  
  "runArgs": [
    "--gpus=all",
    "--privileged",
    "--network=host",
    "--device=/dev:/dev",
    
    // X11 forwarding for Isaac Sim GUI
    "-e", "DISPLAY=${localEnv:DISPLAY}",
    "-e", "XAUTHORITY=/home/isaac/.Xauthority",
    "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
    "-v", "${localEnv:HOME}/.Xauthority:/home/isaac/.Xauthority",
    
    // Isaac Sim environment variables
    "-e", "ACCEPT_EULA=Y",
    "-e", "PRIVACY_CONSENT=Y", 
    "-e", "OMNI_KIT_ALLOW_ROOT=1",
    "-e", "NVIDIA_DRIVER_CAPABILITIES=all",
    "-e", "NVIDIA_VISIBLE_DEVICES=all",
    "-e", "__NV_PRIME_RENDER_OFFLOAD=1",
    "-e", "__GLX_VENDOR_LIBRARY_NAME=nvidia",
    
    // Cache directories for Isaac Sim performance
    "-v", "${localEnv:HOME}/docker/isaac-sim/cache/kit:/isaac-sim/kit/cache:rw",
    "-v", "${localEnv:HOME}/docker/isaac-sim/cache/ov:/home/isaac/.cache/ov:rw", 
    "-v", "${localEnv:HOME}/docker/isaac-sim/cache/pip:/home/isaac/.cache/pip:rw",
    "-v", "${localEnv:HOME}/docker/isaac-sim/cache/glcache:/home/isaac/.cache/nvidia/GLCache:rw",
    "-v", "${localEnv:HOME}/docker/isaac-sim/cache/computecache:/home/isaac/.nv/ComputeCache:rw",
    "-v", "${localEnv:HOME}/docker/isaac-sim/logs:/home/isaac/.nvidia-omniverse/logs:rw",
    "-v", "${localEnv:HOME}/docker/isaac-sim/data:/home/isaac/.local/share/ov/data:rw",
    "-v", "${localEnv:HOME}/docker/isaac-sim/documents:/home/isaac/Documents:rw"
  ],

  "containerUser": "root",
  "remoteUser": "root",
  
  "workspaceFolder": "/workspace/rl_for_curobo",
  
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace/rl_for_curobo,type=bind,consistency=cached"
  ],

  "postCreateCommand": [
    "bash", "-c", 
    "cd /workspace/rl_for_curobo && /isaac-sim/python.sh -m pip uninstall -y rl_for_curobo && /isaac-sim/python.sh -m pip install -e /workspace/rl_for_curobo && source /opt/ros/humble/setup.sh"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint", 
        "ms-toolsai.jupyter",
        "ms-vscode.cpptools-extension-pack",
        "redhat.vscode-yaml",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/isaac-sim/python.sh",
        "python.terminal.activateEnvironment": false,
        "python.analysis.extraPaths": [
          "/isaac-sim",
          "/pkgs/curobo",
          "/workspace/rl_for_curobo"
        ],
        "python.analysis.autoImportCompletions": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": ["-l"]
          }
        },
        "files.watcherExclude": {
          "**/cache/**": true,
          "**/logs/**": true,
          "**/.nv/**": true,
          "**/kit/cache/**": true,
          "**/.cache/**": true
        }
      }
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}